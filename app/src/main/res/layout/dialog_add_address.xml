<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:minWidth="510dp"

    android:layout_height="match_parent" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/all_title_size"
        android:background="@drawable/draw_top_two_corner_borderless"
        android:text="آدرس منتخب"
        fontPath="@string/fontsIran"
        android:textSize="@dimen/text_size_between"
        android:textColor="@color/colorWhite"
        android:gravity="center_horizontal|center_vertical"
        />

    <LinearLayout

        android:background="@drawable/draw_border_topless_bg_lpurple_round"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            ></FrameLayout>
       <LinearLayout
           android:layout_marginTop="10dp"
           android:layoutDirection="rtl"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           >
           <FrameLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight=".5"
               ></FrameLayout>
           <TextView
                android:textColor="@color/colorAccent"
               android:layout_weight=".5"
               android:layout_marginTop="10dp"
               fontPath="@string/fontsIran"
               android:textSize="@dimen/text_size"
               android:id="@+id/LBL_address_name"
               android:layout_gravity="center"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="نام مکان:"

               />
           <FrameLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight=".7"
               ></FrameLayout>
           <EditText
               android:singleLine="true"
                android:imeOptions="actionNext"
               android:id="@+id/placeName"
                android:background="@drawable/draw_round_whitebox"
               fontPath="@string/fontsIran"
              android:gravity="center_vertical|right"
               android:layout_below="@+id/LBL_address_name"
               android:layout_width="0dp"
               android:layout_weight="4"
               android:layout_height="wrap_content"
               android:textAlignment="center"
               android:maxLength="20"
               android:lines="1"
               android:textColorHint="@color/colorWhite"
               android:textColor="@color/colorAccent"
               android:hint="نام دلخواه"
               android:maxLines="1"
               />
           <FrameLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight=".5"
               ></FrameLayout>
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="10dp"
           android:layoutDirection="rtl"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="100dp">
           <FrameLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight=".5"
               ></FrameLayout>
           <TextView
               android:textColor="@color/colorAccent"
               android:layout_weight=".5"
               android:layout_marginTop="10dp"
               fontPath="@string/fontsIran"
               android:textSize="@dimen/text_size"
               android:id="@+id/LBL_address_name"

               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="آدرس کامل:"

               />
           <FrameLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight=".5"
               ></FrameLayout>
           <EditText

               android:id="@+id/StreetAddress"
               android:background="@drawable/draw_round_whitebox"
               fontPath="@string/fontsIran"
               android:layout_gravity="center_vertical|center_horizontal"
               android:layout_below="@+id/LBL_address_name"
               android:layout_width="0dp"
               android:layout_weight="4"
               android:layout_height="100dp"
               android:gravity="top"
               android:padding="5dp"
               android:textColor="@color/colorAccent"
               android:textColorHint="@color/colorWhite"
               android:hint="شامل:کوچه،کوچه فرعی، پلاک، نام و ساختمان،..."

               />
           <FrameLayout
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight=".5"
               ></FrameLayout>
       </LinearLayout>

        <LinearLayout

            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></FrameLayout>
            <Button
                android:id="@+id/dialogOK"
                fontPath="@string/YekanFont"
                android:text="ثبت"
                android:textColor="@color/colorWhite"
                android:background="@drawable/draw_btn_radius"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textSize="@dimen/text_size_between"
                />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></FrameLayout>
            <Button
                android:textSize="@dimen/text_size_between"
                fontPath="@string/YekanFont"
                android:text="انصراف"
                android:textColor="@color/colorWhite"
                android:background="@drawable/draw_btn_radius"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                />
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                ></FrameLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>